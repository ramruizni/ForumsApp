<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rayku.firebasetutorialone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ForumsApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ActivityPermissions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivitySignup" />
        <activity android:name=".ActivityProfile" />
        <activity android:name=".ActivityScrolling" />
        <activity android:name=".ActivityTopic" />
        <activity android:name=".ActivityInfo" />
        <activity android:name=".ActivitySearchForum" />
        <activity android:name=".ActivityTopicSettings" />
        <activity android:name=".ActivityNewForum" />
        <activity android:name=".ActivityNewTopic" />

    </application>

</manifest>